<p><img style="width: 300px" src= "{{ logo }}" alt = "Logo Louvre"></p>
<h2>{{ 'the louvre museum thanks you for your order placed on the'|upper }} {{ booking.purchaseDate|date('d/m/Y') }}</h2>
<hr class="my-4">

<ul>
    <li><span>{{ 'booking code'|capitalize }} : </span>{{ booking.bookingCode }}</li>
    <li><span>{{ 'visit date'|capitalize }} :  </span>{{ booking.visitDate|date('d/m/Y') }}</li>
    <li><span>{{ 'ticket'|capitalize }} : {% if booking.ticketType == 1 %} {{ 'day' }} {% else %} {{ 'half-day' }} {% endif %}</li>
</ul>

<hr class="my-4">
{% for ticket in app.session.get('booking').tickets %}
    <hr class="my-4">
    <p>{{ 'last name'|capitalize }} : {{ ticket.lastName|upper }}</p>
    <p>{{ 'first name'|capitalize }} : {{ ticket.firstName|upper }}</p>
    <p>{{ 'birth date'|capitalize }} : {{ ticket.birthDate|date('d/m/Y') }}</p>
    <p>{{ 'country'|capitalize }} : {{ ticket.country|upper }}</p>
    <p>{{ 'reduced price'|capitalize }} : {% if ticket.reducedPrice %}{{ 'yes' }}{% else %}{{ 'no' }}{% endif %}</p>
    <p>{% if ticket.reducedPrice %}<span>{{ 'do not forget to bring your proof !'|capitalize }}</span>{% else %}{{ '' }}{% endif %}</p>
    <p>{{ 'ticket price'|capitalize }} :  {{ ticket.price|upper }}</p>


{% endfor %}


<hr class="my-4">
                <p><span>{{ 'total amount'|capitalize }} : </span> {{ booking.totalPrice|number_format(2,',',' ') }} euros</p>
             <hr class="my-4">
                <p>{{ 'thank you for your trust'|capitalize }}</p>
                <p> {{ 'the louvre museum team'|capitalize }}</p>


